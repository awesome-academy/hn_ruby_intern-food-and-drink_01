<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Thêm đường dẫn</p>
        <%= form_for [:admin, @product] do |f| %>
          <%= render "admin/shared/error_messages", object: f.object%>
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :unit_price, "unit_price" %>
          <%= f.text_field :unit_price, class: "form-control" %>
          <%= f.label :description, "description" %>
          <%= f.text_field :description, class: "form-control" %>
          <%= f.label :quantity, "quantity" %>
          <%= f.text_field :quantity, class: "form-control" %>
          <%= f.label :category_id, t(".category") %>
          <%= collection_select(:product, :category_id, @categories, :id, :name,
                         include_blank: false ,
                         class: "form form-control") %>
          <%= f.label :size, "size" %>
          <%= collection_check_boxes(:product, :size_ids, Size.all, :id, :size) do  |b| %>
            <%= b.check_box %>
            <%= b.label %>
          <%end%>
          <span class="image">
            <%= f.file_field :image %>
          </span>
          <%= f.submit "Add", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
