<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="account-manage-page">
  <%= link_to "New Size", new_admin_size_path, class: "btn btn-small btn-success"%>
    <table class="rwd-table">
      <thead>
        <tr>
          <th>Ma</th>
          <th>Size</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @sizes.each do |size| %>
          <tr>
            <td><%= size.id %></td>
            <td><%= size.size %></td>
            <td>
              <div class="action-btn">
                <%= link_to edit_admin_size_path(size) do %>
                  <span class="fa fa-edit"></span>
                <% end %>
                <%= link_to admin_size_path(size), method: :delete, data: { confirm: "Bạn có chắc là muốn xóa không?" } do %>
                  <span class="fa fa-trash"></span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%== pagy_nav(@pagy) %>
  </div>
</div>
