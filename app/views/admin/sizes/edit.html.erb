<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Thêm đường dẫn</p>
        <%= form_for [:admin, @size] do |f| %>
          <%= render "admin/shared/error_messages", object: f.object%>
          <%= f.label :size, "Teen" %>
          <%= f.text_field :size, class: "form-control" %>
          <%= f.submit "Update", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
