<tr>
  <td><%= order.id %></td>
  <td><%= order.name %></td>
  <td><%= order.phone_num %></td>
  <td><%= order.address %></td>
  <td><%= order.note %></td>
  <td>
    <%= form_for([:admin,order], html: {:onsubmit => "return confirm('Are you sure?');" }) do |f| %>
      <% if order.pending? %>
        <%= f.select :status, Order.statuses.keys[0..1] ,{}, class: "form-control select-status", id: "order_#{order.id}" %>
      <% elsif order.accepted? %>
        <%= f.select :status, Order.statuses.keys[1..3] ,{}, class: "form-control select-status", id: "order_#{order.id}" %>
      <% else %>
        <%= order.status %>
      <% end %>
    <% end %>
  </td>
  <td><%= number_to_currency order.total_money %></td>
  <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
  <td>
    <div class="action-btn">
      <%= link_to admin_order_path(order), remote: true, data: {method: :get} do %>
        <span class="fa fa-info-circle"></span>
      <% end %>
    </div>
  </td>
</tr>
<div class="modal fade" id="reason-modal_order_<%=order.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".reason"%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for [:admin, order] do |f| %>
          <%= f.text_area :reason, class: "form-control", rows: 17 %>
          <%= f.hidden_field :status, value: "canceled"%>
          <div class="modal-footer">
            <%= f.submit t(".save"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
