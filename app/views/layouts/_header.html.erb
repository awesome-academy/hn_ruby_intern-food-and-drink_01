<!-- Topbar Start -->
<div class="container-fluid">
  <div class="row bg-secondary py-1 px-xl-5">
    <div class="col-lg-6 d-none d-lg-block">
      <div class="d-inline-flex align-items-center h-100">
        <a class="text-body mr-3" href=""><%= t ".about" %></a>
        <a class="text-body mr-3" href=""><%= t ".contact" %></a>
        <a class="text-body mr-3" href=""><%= t ".help" %></a>
        <a class="text-body mr-3" href=""><%= t ".faqs" %></a>
      </div>
    </div>
    <div class="col-lg-6 text-center text-lg-right">
      <div class="d-inline-flex align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown"><%= t ".account"%></button>
          <% if user_signed_in? %>
            <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t(".profile"), edit_user_registration_path, class:"dropdown-item" %>
              <%= link_to t(".logout"), destroy_user_session_path, class:"dropdown-item", method: :delete %>
            </div>
          <% else %>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to t(".signin"), new_user_session_path, class: "dropdown-item" %>
              <%= link_to t(".signup"), new_user_registration_path, class: "dropdown-item" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
    <div class="col-lg-4">
      <a href="" class="text-decoration-none">
        <span class="h1 text-uppercase text-primary bg-dark px-2"><%= t ".food" %></span>
        <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1"><%= t ".drink" %></span>
      </a>
    </div>
    <div class="col-lg-4 col-6 text-left">
      <form action="">
        <div class="input-group">
          <input type="text" class="form-control" placeholder= <%= t ".search_for_product" %>>
          <div class="input-group-append">
            <span class="input-group-text bg-transparent text-primary">
              <i class="fa fa-search"></i>
            </span>
          </div>
        </div>
      </form>
    </div>
    <div class="col-lg-4 col-6 text-right">
      <p class="m-0"><%= t ".service" %></p>
      <h5 class="m-0"><%= t ".phone" %></h5>
    </div>
  </div>
</div>
<!-- Topbar End -->
<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
  <div class="row px-xl-5">
    <div class="col-lg-3 d-none d-lg-block">
      <a class="nav3 btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" id="nav3" >
        <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i><%= t ".categories" %></h6>
        <i class="fa fa-angle-down text-dark"></i>
      </a>
      <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" >
        <div class="navbar-nav w-100">
          <a href="" class="nav-item nav-link"><%= t ".food" %></a>
          <a href="" class="nav-item nav-link"><%= t ".drink" %></a>
        </div>
      </nav>
    </div>
    <div class="col-lg-9">
      <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
          <div class="navbar-nav mr-auto py-0">
            <%= link_to t(".home"), root_path, class: "nav-item nav-link active" %>
            <%= link_to t(".shop"), products_path, class: "nav-item nav-link active" %>
            <div class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= t ".pages" %> <i class="fa fa-angle-down mt-1"></i></a>
              <div class="dropdown-menu bg-primary rounded-0 border-0 m-0">
                <a href="cart.html" class="dropdown-item"><%= t ".shoping_cart" %></a>
                <a href="checkout.html" class="dropdown-item"><%= t ".checkout" %></a>
              </div>
            </div>
            <a href="contact.html" class="nav-item nav-link"><%= t ".contact" %></a>
            <%= link_to t(".history_order"), orders_path, class: "nav-item nav-link active" %>
          </div>
          <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
            <a href="" class="btn px-0">
              <i class="fas fa-heart text-primary"></i>
              <span class="span1 badge text-secondary border border-secondary rounded-circle" ><%= Settings.view.layouts.header.num %></span>
            </a>
            <%= link_to carts_path do %>
              <span class="fas fa-shopping-cart text-primary"></span>
              <span class="span1 badge text-secondary border border-secondary rounded-circle" ><%= count_carts %></span>
            <% end %>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>
<!-- Navbar End -->
