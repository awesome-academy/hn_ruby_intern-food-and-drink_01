  <!-- Checkout Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-lg-8">
      <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
      <div class="bg-light p-30 mb-5">
        <%= form_for @order do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.label :name %>
          <%= f.text_field :name, value: current_user.name, class: "form-control" %>
          <%= f.label :phone_num, "phone number" %>
          <%= f.number_field :phone_num, value: current_user.phone_num, class: "form-control" %>
          <%= f.label :address %>
          <%= f.text_field :address, value: current_user.address, class: "form-control" %>
          <%= f.label :note %>
          <%= f.text_field :note, class: "form-control" %>
          <%= f.hidden_field :total_money, value: total_price, class: "form-control" %>
          <%= f.submit "submit_pay", class: "btn btn-block btn-primary font-weight-bold py-3" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-4">
      <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3"><%= t ".order_total" %></span></h5>
      <div class="bg-light p-30 mb-5">
        <div class="border-bottom">
          <h6 class="mb-3"><%= t ".product" %></h6>
          <%= render partial: "shared/product_size", collection: @product_sizes %>
        </div>
        <div class="pt-2">
          <div class="d-flex justify-content-between mt-2">
            <h5><%= t ".total" %></h5>
            <h5><%= number_to_currency total_price %></h5>
          </div>
        </div>
      </div>
      <div class="mb-5">
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3"><%= t ".payment" %></span></h5>
        <button class="btn btn-block btn-primary font-weight-bold py-3"><%= t ".place_order" %></button>
      </div>
    </div>
  </div>
</div>
<!-- Checkout End -->
