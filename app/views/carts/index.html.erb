    <!-- Cart Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-lg-8 table-responsive mb-5">
      <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
          <tr>
            <th><%= t ".products" %></th>
            <th><%= t ".price" %></th>
            <th><%= t ".quantity" %></th>
            <th><%= t ".total" %></th>
            <th><%= t ".change" %></th>
          </tr>
        </thead>
        <tbody class="align-middle" id="cart_products">
          <%= render partial: "carts/product_size", collection: @product_sizes %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3"><%= t ".summary" %></span></h5>
      <div class="bg-light p-30 mb-5">
        <div class="pt-2">
          <div class="d-flex justify-content-between mt-2">
            <h5><%= t ".total" %></h5>
            <h5 id="cart-total-money"><%= number_to_currency total_price %></h5>
          </div>
          <% if total_price.positive?%>
            <%= link_to new_order_path do %>
              <button class="btn btn-block btn-primary font-weight-bold my-3 py-3"><%= t ".checkout" %></button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Cart End -->
<%= javascript_pack_tag "main", "data-turbolinks-track": "reload" %>
